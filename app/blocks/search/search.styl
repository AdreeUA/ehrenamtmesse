.search

	&__form
		padding 18px 0 26px
		font-size 15px
		position relative

		+below('sm')
			width 80%
			margin 0 auto
		//
	&__item
		padding 0 30px 0 9px
		width 100%
		border 1px solid #1769b3
		line-height 28px
		height 28px

	&__btn
		position absolute
		top 23px
		right 6px
		background-image url(../images/search-icon.png)
		background-size cover
		height 20px
		width 20px
		border none
		background-color transparent
