.slider-top

	&__item
		min-height 462px
		position relative
		padding 18px
		background-repeat no-repeat
		background-size cover
		background-position 50% 50%
		clearfix()

		+below('xs')
			min-height 380px

	&__image-wrap
		width 100%
		height 100%

	&__image
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		width 100%
		height auto

	&__header-wrap
		float left
		&_odd
			float right
			text-align right

	&__header
		padding 14px
		background-color rgba(255, 255, 255, .8)
		display inline-block
		margin-bottom 10px
		position relative
		font-size 22px
		line-height 1.5
		color #515153

		+below('xs')
			font-size 16px

	&__title
		font-weight bold

	&__disc
		//
	&__btn-wrap
		position relative

	&__btn
		display inline-block
		background-color #fa0605
		padding 10px
		text-decoration none
		color #fff
		border 1px solid

	.owl-nav
		position absolute
		top 50%
		clearfix()
		width 100%

	.slider-arrow
		font-size 50px
		font-weight bold
		color rgba(#fff, .5)

	.owl-next
		float right
		margin-right 20px

	.owl-prev
		float left
		margin-left 20px
