
.main-nav
	text-align center
	background-color #1b6bb4
	+below('xs')
		position absolute
		top 0
		left 0
		width 100%
		z-index 10
		height 50px

	&__list
		//
		+below('xs')
			position absolute
			top -1000px
			left 0
			right 0
			padding-top 16px
			background-color #41abe1
			transition all .3s ease-out .3s

	&__item
		display inline-block
		vertical-align top

		+below('xs')
			display block

	&__link
		padding 20px
		display block
		text-decoration none
		color #fff
		position relative

		&:hover
			&:before
				content ''
				position absolute
				triangle(14px, 7px, top, #fff)
				bottom 0
				left 50%
				margin-left -7px

		+below('sm')
			padding 20px 6px
			background-color  #1b6bb4
			&:hover
				text-decoration underline
				&:before
					border none
		+below('xs')
			width 90%
			padding 10px
			margin 0 auto 5px


	&__burger-wrap
		display none
		position absolute
		top 0
		right 5px
		z-index 11

		+below('xs')
			display block

	&__burger
		display block
		position relative
		z-index 11
		background transparent
		width $button-radius
		height $button-radius
		border-radius 4px
		text-align center
		vertical-align middle
		transition all .5s ease
		border $button-line-height solid transparent
		transition all .3s linear 0s

		&_open &-icon
			background transparent

			&:before, &:after
				transform-origin 0 50%
				width 24.5px

			&:before
				// transform rotateZ(.68350111rad)
				transform rotate(45deg)

			&:after
				// transform rotateZ(-.68350111rad)
				transform rotate(-45deg)
				top 10px

	&__burger-icon
		display inline-block
		position absolute
		background $color-second
		margin 0 auto
		width $burger-width
		height $button-line-height
		top 50%
		left 0
		right 0
		transition all .5s ease
		transform translateY(-.5 * $button-line-height)

		&:before, &:after
			content ''
			position absolute
			margin 0 auto
			background $color-second
			width $burger-width
			height $button-line-height
			left 0
			right 0
			transition all .5s ease


		&:before
			bottom $burger-gutter

		&:after
			top $burger-gutter
