
.main-nav
	text-align center
	background-color #1b6bb4
	+below('xs')
		position absolute
		top 10px
		left 0
		width 100%
		z-index 10

	&__list
		//
		+below('xs')
			position absolute
			left -9999px
			padding-top 16px
			background-color #41abe1

	&__item
		display inline-block
		vertical-align top

		+below('xs')
			display block

	&__link
		padding 20px
		display block
		text-decoration none
		color #fff
		position relative

		&:hover
			&:before
				content ''
				position absolute
				triangle(14px, 7px, top, #fff)
				bottom 0
				left 50%
				margin-left -7px

		+below('sm')
			padding 20px 6px
			background-color  #1b6bb4
			&:hover
				text-decoration underline
				&:before
					border none
		+below('xs')
			width 90%
			padding 10px
			margin 0 auto 5px


	&__burger-wrap
		display none
		position absolute
		top 0
		right 5px
		z-index 11

		+below('xs')
			display block

	&__burger
		display block
		position relative
		z-index 11
		background transparent
		width $button-radius
		height $button-radius
		border-radius 4px
		text-align center
		vertical-align middle
		transition all .5s ease
		border $button-line-height solid transparent
		transition all .3s linear 0s

		&_open &-icon
			background transparent

			&:before, &:after
				transform-origin 0 50%
				width 20px

			&:before
				transform rotateZ(.64350111rad)

			&:after
				transform rotateZ(-.64350111rad)

	&__burger-icon
		display inline-block
		position absolute
		background $color-second
		margin 0 auto
		width $burger-width
		height $button-line-height
		top 50%
		left 0
		right 0
		transition all .5s ease
		transform translateY(-.5 * $button-line-height)

		&:before, &:after
			content ''
			position absolute
			margin 0 auto
			background $color-second
			width $burger-width
			height $button-line-height
			left 0
			right 0
			transition all .5s ease


		&:before
			bottom $burger-gutter

		&:after
			top $burger-gutter
