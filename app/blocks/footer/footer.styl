.footer

	&__inner
		min-height 119px
		background url(../images/footer_bg.jpg) no-repeat center center
		padding-top 10px
		background-size cover

	&__bottom
		background-color #1a6ab3
		color #fff
		padding-top 17px
		clearfix()
		padding-bottom 4px
		min-height 54px

	&__copy
		float left
		margin-left 15px

		+below('xs')
			float none
			text-align center
			margin-bottom 10px

	&__menu
		float right

		+below('xs')
			float none
			text-align center

	&__link
		color inherit
		text-decoration none
		display inline-block
		margin-right 15px
